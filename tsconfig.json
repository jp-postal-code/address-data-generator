{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "module": "NodeNext",
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2020"],
    "types": ["node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
